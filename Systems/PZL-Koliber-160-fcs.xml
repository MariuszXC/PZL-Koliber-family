<?xml version="1.0"?>
<flight_control>
	<channel name="Controls lag-filter">
		<lag_filter name="fcs/aileron-lag-filter">
			<input>fcs/aileron-cmd-norm</input>
			<c1>25</c1>
		</lag_filter>
		<lag_filter name="fcs/elevator-lag-filter">
			<input>fcs/elevator-cmd-norm</input>
			<c1>25</c1>
		</lag_filter>
		<lag_filter name="fcs/rudder-lag-filter">
			<input>fcs/rudder-cmd-norm</input>
			<c1>25</c1>
		</lag_filter>
	</channel>

	<channel name="Pitch">
			<summer name="Pitch Trim Sum">
				<input>fcs/elevator-lag-filter</input>
				<input>fcs/pitch-trim-cmd-norm</input>
				<clipto>
					<min> -1 </min>
					<max>	1 </max>
				</clipto>
			</summer>

			<aerosurface_scale name="Elevator Control">
				<input>fcs/pitch-trim-sum</input>
				<range>
					<min> -0.436332313 </min>
					<max>	0.523598776 </max>
				</range>
				<output>fcs/elevator-pos-rad</output>
			</aerosurface_scale>

			<aerosurface_scale name="Elevator Normalization">
				<input>fcs/elevator-pos-rad</input>
				<domain>
					<min> -0.436332313</min>
					<max> 0.523598776 </max>
				</domain>
				<range>
					<min> -1 </min>
					<max>	1 </max>
				</range>
				<output>fcs/elevator-pos-norm</output>
		</aerosurface_scale>
	</channel>

	<channel name="Roll">
		<summer name="Roll Trim Sum">
			<input>fcs/aileron-lag-filter</input>
			<input>fcs/roll-trim-cmd-norm</input>
			<clipto>
				<min> -1 </min>
				<max>	1 </max>
			</clipto>
		</summer>

		<aerosurface_scale name="Left Aileron Control">
			<input>fcs/roll-trim-sum</input>
			<range>
				<min>-13.5</min>
				<max>17.5</max>
			</range>
			<output>fcs/left-aileron-pos-deg</output>
		</aerosurface_scale>

		<aerosurface_scale name="Right Aileron Control">
			<input>-fcs/roll-trim-sum</input>
			<range>
				<min>-13.5</min>
				<max>17.5</max>
			</range>
			<output>fcs/right-aileron-pos-deg</output>
		</aerosurface_scale>

		<aerosurface_scale name="Left Aileron Normalization">
			<input>fcs/left-aileron-pos-deg</input>
			<domain>
				<min>-13.5</min>
				<max>17.5</max>
			</domain>
			<range>
				<min>-1</min>
				<max>1</max>
			</range>
			<output>fcs/left-aileron-pos-norm</output>
		</aerosurface_scale>

		<aerosurface_scale name="Right Aileron Normalization">
			<input>fcs/right-aileron-pos-deg</input>
			<domain>
				<min>-13.5</min>
				<max>17.5</max>
			</domain>
			<range>
				<min>-1</min>
				<max>1</max>
			</range>
			<output>fcs/right-aileron-pos-norm</output>
		</aerosurface_scale>
		
		<fcs_function>
			<function>
				<quotient>
					<sum>
						<property>fcs/left-aileron-pos-deg</property>
						<property>-fcs/right-aileron-pos-deg</property>
					</sum>
					<value>2</value>
				</quotient>
			</function>
			<output>fcs/aileron-pos-deg</output>
		</fcs_function>
		
		<fcs_function>
			<function>
				<toradians>
					<property>fcs/aileron-pos-deg</property>
				</toradians>
			</function>
			<output>fcs/aileron-pos-rad</output>
		</fcs_function>
		
		<aerosurface_scale>
			<input>fcs/aileron-pos-deg</input>
			<domain>
				<min>-15.5</min>
				<max>15.5</max>
			</domain>
			<range>
				<min>-1</min>
				<max>1</max>
			</range>
			<output>fcs/aileron-pos-norm</output>
		</aerosurface_scale>
		
		<fcs_function>
			<function>
				<abs>
					<property>fcs/aileron-pos-deg</property>
				</abs>
			</function>
			<output>fcs/mag-aileron-pos-deg</output>
		</fcs_function>
		
		<fcs_function>
			<function>
				<abs>
					<property>fcs/aileron-pos-rad</property>
				</abs>
			</function>
			<output>fcs/mag-aileron-pos-rad</output>
		</fcs_function>
		
		<fcs_function>
			<function>
				<abs>
					<property>fcs/aileron-pos-norm</property>
				</abs>
			</function>
			<output>fcs/mag-aileron-pos-norm</output>
		</fcs_function>
	</channel>

	<channel name="Yaw">
		<summer name="Rudder Command Sum">
			<input>fcs/rudder-lag-filter</input>
			<input>fcs/yaw-trim-cmd-norm</input>
			<clipto>
				<min> -1 </min>
				<max>	1 </max>
			</clipto>
		</summer>

		<aerosurface_scale name="Rudder Control">
			<input>fcs/rudder-command-sum</input>
			<range>
				<min> -0.523598776</min>
				<max> 0.523598776 </max>
			</range>
			<output>fcs/rudder-pos-rad</output>
		</aerosurface_scale>

		<aerosurface_scale name="Rudder Normalization">
			<input>fcs/rudder-pos-rad</input>
			<domain>
				<min> -0.523598776 </min>
				<max>	0.523598776 </max>
			</domain>
			<range>
				<min> -1 </min>
				<max>	1 </max>
			</range>
			<output>fcs/rudder-pos-norm</output>
		</aerosurface_scale>
	</channel>

	<channel name="Flaps">
		<kinematic name="Flaps Control">
			<input>fcs/flap-cmd-norm</input>
			<traverse>
				<setting>
						<position> 15 </position>		<!-- the 950kg MTOW version have always flaps -->
						<time>			0 </time>
				</setting>
				<setting>
						<position> 30 </position>
						<time>			5 </time>
				</setting>
			</traverse>
			<output>fcs/flap-pos-deg</output>
		</kinematic>

		<aerosurface_scale name="Flap Normalization">
			<input>fcs/flap-pos-deg</input>
			<domain>
				<min>	15 </min>
				<max> 30 </max>
			</domain>
			<range>
				<min> 0 </min>
				<max> 1 </max>
			</range>
			<output>fcs/flap-pos-norm</output>
		</aerosurface_scale>
	</channel>
	
        <channel name="Mixture"> <!-- Inspired on Cessna172P -->
            <fcs_function name="fcs/mixture-primer-cmd">
                <function>
                    <table>
                        <independentVar lookup="row">/controls/engines/engine/primer</independentVar>
                        <independentVar lookup="column">/controls/engines/engine/throttle</independentVar>
                        <tableData>
                                 0.09    0.1    0.5    0.51
                            2    0       0      0      0
                            3    0       1      1      0
                            4    0       1      1      0
                            5    0       1      1      0
                            6    0       1      1      0
                            7    0       0      0      0
                        </tableData>
                    </table>
                </function>
            </fcs_function>

            <pure_gain name="fcs/mixture-primer">
                <input>fcs/mixture-cmd-norm</input>
                <gain>fcs/mixture-primer-cmd</gain>
            </pure_gain>

            <switch name="Mixture Position">
                <default value="fcs/mixture-cmd-norm"/>
                <output>fcs/mixture-pos-norm</output>
                <test logic="AND" value="fcs/mixture-primer">
                    /controls/engines/engine/use-primer eq 1
                    /engines/engine[0]/oil-temperature-degf le 75
                </test>
            </switch>

        </channel>
</flight_control>
