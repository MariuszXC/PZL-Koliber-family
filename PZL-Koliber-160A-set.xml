<PropertyList>
<sim>
  <description>PZL Koliber 160A</description>
  <aircraft-version>0.9</aircraft-version>
  <rating>
    <FDM type="int">3</FDM>
    <systems type="int">4</systems>
    <cockpit type="int">4</cockpit>
    <model type="int">3</model>
  </rating>
  
  <author>SP-NTX, jakkos98 (FDM, 3D, Data). Original by: Mariusz Migut SP-MMA(3D, Sounds), Patrice Poly "WooT" (FDM)</author>

  <flight-model>jsb</flight-model>
  <aero>PZL-Koliber-160</aero>




  <startup>
    <splash-texture>Aircraft/PZL-Koliber-family/splash.png</splash-texture>
    <splash-title>PZL Koliber 160A</splash-title>
  </startup>
  <systems include="Systems/Koliber-electrical.xml"></systems>

  <instrumentation>
    <path>Aircraft/PZL-Koliber-family/Systems/generic-instrumentation.xml</path>
  </instrumentation>

  <sound>
    <path>Aircraft/PZL-Koliber-family/Sounds/PZL-Koliber-160A-sound.xml</path>
  </sound>

  <panel>
    <visibility archive="n">false</visibility>
  </panel>

  <model>
    <path archive="y">Aircraft/PZL-Koliber-family/Models/PZL-Koliber-160A.xml</path>
  </model>
     
  <!-- View -->      

<view>
  <internal archive="y">true</internal>
    <config>
      <x-offset-m type="double">-0.253</x-offset-m> 
      <y-offset-m type="double">0.6750</y-offset-m> 
      <z-offset-m type="double">-0.072</z-offset-m>
      <pitch-offset-deg>-7.23</pitch-offset-deg>
      <default-field-of-view-deg>55.0</default-field-of-view-deg>
    </config>
</view>
   <!-- x/y/z = right/up/back ( Blender/FG equivalent: y/z/x) --> 
<view n="0">
  <name>Default</name>
  <type>lookfrom</type>
  <internal type="bool">true</internal>
  <config>
    <x-offset-m type="double">0.2</x-offset-m> <!--right -->
    <y-offset-m type="double">0.5</y-offset-m>  <!--up -->
    <z-offset-m type="double">-0.1</z-offset-m>  <!--back -->	
    <heading-offset-deg>1.8</heading-offset-deg>
    <pitch-offset-deg>-0.6</pitch-offset-deg>
    <default-field-of-view-deg>83.0</default-field-of-view-deg>
    <limits>
      <enabled type="bool">true</enabled>
      <left>
	<heading-max-deg type="double">140</heading-max-deg>
	<x-offset-max-m type="double">0.10</x-offset-max-m>
	<x-offset-threshold-deg type="double">65</x-offset-threshold-deg>
      </left>
      <right>
	<heading-max-deg type="double">160</heading-max-deg>
	<x-offset-max-m type="double">0.15</x-offset-max-m>
	<x-offset-threshold-deg type="double">65</x-offset-threshold-deg>
      </right>
    </limits>
  </config>
</view>
	

<view n="1">
  <name>Cockpit</name>
  <type>lookfrom</type>
  <internal type="bool">true</internal>
  <config>
    <from-model type="bool">true</from-model>
    <from-model-idx type="int">0</from-model-idx>
    <x-offset-m type="double">-0.253</x-offset-m> <!--right -->
    <y-offset-m type="double">0.6750</y-offset-m>  <!--up -->
    <z-offset-m type="double">-0.01</z-offset-m>  <!--back -->
    <pitch-offset-deg>-7.23</pitch-offset-deg>
    <default-field-of-view-deg>97.0</default-field-of-view-deg>
    <limits>
      <enabled type="bool">true</enabled>
      <left>
	<heading-max-deg type="double">140</heading-max-deg>
	<x-offset-max-m type="double">0.10</x-offset-max-m>
	<x-offset-threshold-deg type="double">65</x-offset-threshold-deg>
      </left>
      <right>
	<heading-max-deg type="double">160</heading-max-deg>
	<x-offset-max-m type="double">0.15</x-offset-max-m>
	<x-offset-threshold-deg type="double">65</x-offset-threshold-deg>
      </right>
    </limits>
  </config>
</view>

<help>
